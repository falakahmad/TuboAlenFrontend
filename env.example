# Backend Configuration (REQUIRED for API routes)
# Server-side environment variable - set this in Vercel project settings
REFINER_BACKEND_URL=https://turbo-alen-backend.vercel.app

# Optional: Backend API Key for authentication (if your backend requires it)
BACKEND_API_KEY=your_backend_api_key_here

# JWT Secret (REQUIRED for authentication)
# Change this in production - use a strong random string
JWT_SECRET=your-secret-key-change-in-production

# Supabase Configuration (if using Supabase)
# Get these values from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: OpenAI API Key for AI features
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Stripe Configuration (if using Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
